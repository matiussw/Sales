@typeparam Titem

@if (MyList is null)
{
    if (Loading is null)
    {
        <div class="align-items-center">
            <img src="https://art.pixilart.com/7badccc6206bf0f.gif" />
        </div>
        }
    }
    else if (MyList.Count == 0)
    {
        if (NoRecords is null)
        {
<div class="align-items-center">
    <p>No hay Registros</p>
</div>
        }
        else
        {
            @NoRecords
        }

    }
    else
    {
        @Boby
    }


@code {
    [Parameter]
    public RenderFragment? Loading { get; set; }

    [Parameter]
    public RenderFragment? NoRecords { get; set; }

    [Parameter]
    [EditorRequired]
    public RenderFragment? Boby { get; set; }

    [Parameter]
    [EditorRequired]
    public List<Titem>? MyList { get; set; }
}

